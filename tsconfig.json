{
  "extends": "@stefanprobst/tsconfig",
  "compilerOptions": {
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "app-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.config.js"
  ],
  "exclude": ["node_modules"]
}
