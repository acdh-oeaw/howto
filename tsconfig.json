{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@acdh-oeaw/tsconfig",
	"compilerOptions": {
		"paths": {
			"@/*": ["./*"]
		},
		"plugins": [{ "name": "next" }]
	},
	"include": ["./**/*.ts", "./**/*.tsx", ".next/types/**/*.ts", "./**/*.js"],
	"exclude": ["node_modules", "out"],
	"mdx": {
		"plugins": ["remark-frontmatter", "remark-mdx-frontmatter", "remark-gfm"]
	}
}
