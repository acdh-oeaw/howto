{
	"name": "@acdh-oeaw/howto",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "18.x",
		"yarn": "1.x"
	},
	"packageManager": "yarn@1.22.19",
	"scripts": {
		"analyze": "cross-env ANALYZE='true' yarn run build",
		"build": "next build",
		"cms:dev": "cross-env PORT=8081 netlify-cms-proxy-server",
		"cms:styles": "cross-env NODE_ENV='production' NODE_OPTIONS='-r tsconfig-paths/register' postcss --config src/cms/previews/postcss.config.cjs node_modules/tailwindcss/tailwind.css src/styles/index.css -d public/assets/css && prettier public/assets/css --write",
		"cms:styles-win": "cross-env NODE_ENV='production' node -r tsconfig-paths/register node_modules/postcss-cli/index.js --config src/cms/previews/postcss.config.cjs node_modules/tailwindcss/tailwind.css src/styles/index.css -d public/assets/css && .\\node_modules\\.bin\\prettier public/assets/css --write",
		"create:favicons": "tsx ./scripts/createFavicons.ts",
		"create:feed": "tsx ./scripts/createFeed.ts",
		"create:metadata-dump": "tsx ./scripts/dumpMetadata.ts",
		"create:redirects": "tsx ./scripts/createRedirects.ts",
		"create:search-index": "dotenv -- tsx ./scripts/createSearchIndex.ts",
		"create:sitemap": "tsx ./scripts/createSitemap.ts",
		"debug": "cross-env NODE_OPTIONS='--inspect' next dev",
		"dev": "cross-env NEXT_PUBLIC_LOCAL_CMS_URL='http://localhost:8081/api/v1/' NEXT_PUBLIC_BASE_URL='http://localhost:3000' concurrently --kill-others -s first \"yarn run cms:dev\" \"next dev --port=3000\"",
		"format:check": "prettier . !content --cache --check --ignore-path .gitignore",
		"format:fix": "yarn run format:check --write",
		"lint:check": "run-p lint:*:check",
		"lint:fix": "run-p lint:*:fix",
		"lint:code:check": "eslint . --cache --ignore-path .gitignore",
		"lint:code:fix": "yarn run lint:code:check --fix",
		"lint:md:check": "remark . --quiet --frail --ignore-path .gitignore",
		"lint:md:fix": "yarn run lint:md:check --output",
		"lint:mdx:check": "remark . --quiet --frail --use mdx --ignore-path .gitignore",
		"lint:mdx:fix": "yarn run lint:mdx:check --output",
		"lint:styles:check": "stylelint \"./**/*.css\" --cache --ignore-path .gitignore",
		"lint:styles:fix": "yarn run lint:styles:check --fix",
		"postbuild": "run-s create:feed create:sitemap create:redirects create:search-index create:metadata-dump",
		"prebuild": "run-s create:favicons cms:styles",
		"prepare": "run-s setup",
		"setup": "simple-git-hooks || exit 0",
		"start": "next start",
		"test": "exit 0",
		"types:check": "tsc --noEmit",
		"validate": "run-s format:check lint:check types:check test"
	},
	"dependencies": {
		"@codemirror/lang-xml": "^6.0.2",
		"@codemirror/view": "^6.12.0",
		"@headlessui/react": "^1.7.14",
		"@heroicons/react": "^2.0.18",
		"@mdx-js/mdx": "^2.3.0",
		"@next/mdx": "^13.4.4",
		"@react-aria/button": "^3.7.2",
		"@react-aria/dialog": "^3.5.2",
		"@react-aria/focus": "^3.12.1",
		"@react-aria/i18n": "^3.7.2",
		"@react-aria/overlays": "^3.14.1",
		"@react-aria/progress": "^3.4.2",
		"@react-aria/searchfield": "^3.5.2",
		"@react-aria/ssr": "^3.6.0",
		"@react-aria/utils": "^3.17.0",
		"@react-stately/overlays": "^3.5.2",
		"@react-stately/searchfield": "^3.4.2",
		"@stefanprobst/is-absolute-url": "^1.0.2",
		"@stefanprobst/next-error-boundary": "^3.0.2",
		"@stefanprobst/next-page-metadata": "^2.0.5",
		"@stefanprobst/next-svg": "^4.2.1",
		"@stefanprobst/rehype-extract-toc": "^2.2.0",
		"@stefanprobst/rehype-shiki": "^2.2.1",
		"@stefanprobst/remark-resource-links": "^1.0.2",
		"algoliasearch": "^4.17.1",
		"codemirror": "^6.0.1",
		"hastscript": "^7.2.0",
		"image-size": "^1.0.2",
		"mdast-util-to-string": "^3.2.0",
		"netlify-cms-app": "^2.15.72",
		"next": "^13.4.4",
		"nprogress": "^0.2.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"rehype-autolink-headings": "^6.1.1",
		"rehype-slug": "^5.1.0",
		"remark": "^14.0.3",
		"remark-frontmatter": "^4.0.1",
		"remark-gfm": "^3.0.1",
		"remark-mdx": "^2.3.0",
		"remark-mdx-frontmatter": "^2.1.1",
		"remark-slug": "^7.0.1",
		"retext": "^8.1.0",
		"retext-smartypants": "^5.2.0",
		"rosetta": "^1.1.0",
		"sharp": "^0.32.1",
		"shiki": "^0.14.2",
		"strip-indent": "^4.0.0",
		"strip-markdown": "^5.0.1",
		"unified": "^10.1.2",
		"unist-util-visit": "^4.1.2",
		"vfile": "^5.3.7",
		"vfile-matter": "^4.0.1",
		"yaml": "^2.3.1"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^1.0.0",
		"@acdh-oeaw/eslint-config-next": "^1.0.0",
		"@acdh-oeaw/eslint-config-react": "^1.0.0",
		"@acdh-oeaw/prettier-config": "^1.0.0",
		"@acdh-oeaw/stylelint-config": "^1.0.1",
		"@acdh-oeaw/tsconfig": "^1.0.0",
		"@mdx-js/loader": "^2.3.0",
		"@next/bundle-analyzer": "^13.4.4",
		"@next/eslint-plugin-next": "^13.4.4",
		"@stefanprobst/favicons": "^2.2.2",
		"@stefanprobst/next-feed": "^1.0.0",
		"@stefanprobst/next-sitemap": "^1.0.6",
		"@stefanprobst/remark-preset": "^2.0.1",
		"@tailwindcss/typography": "^0.5.9",
		"@types/hast": "^2.3.4",
		"@types/mdast": "^3.0.11",
		"@types/node": "^18.16.16",
		"@types/nprogress": "^0.2.0",
		"@types/react": "^18.2.7",
		"@types/unist": "^2.0.6",
		"autoprefixer": "^10.4.14",
		"concurrently": "^8.0.1",
		"cross-env": "^7.0.3",
		"dotenv-cli": "^7.2.1",
		"eslint": "^8.41.0",
		"eslint-plugin-tailwindcss": "^3.12.0",
		"lint-staged": "^13.2.2",
		"netlify-cms-proxy-server": "^1.3.24",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.24",
		"postcss-cli": "^10.1.0",
		"postcss-import": "^15.1.0",
		"postcss-nesting": "^11.2.2",
		"prettier": "^2.8.8",
		"remark-cli": "^11.0.0",
		"remark-lint-no-dead-urls": "^1.1.0",
		"simple-git-hooks": "^2.8.1",
		"stylelint": "^15.6.2",
		"stylelint-order": "^6.0.3",
		"tailwindcss": "^3.3.2",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^3.12.7",
		"typescript": "^5.0.4",
		"xast-util-feed": "^1.2.3",
		"xast-util-to-xml": "^3.0.2"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config-react",
			"@acdh-oeaw/eslint-config-next",
			"plugin:eslint-plugin-tailwindcss/recommended"
		],
		"rules": {
			"import/no-default-export": "off"
		}
	},
	"lint-staged": {
		"*.@(js|ts|tsx)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(json|yml),!content": "prettier --cache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss/nesting": "postcss-nesting",
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"remarkConfig": {
		"plugins": [
			"remark-frontmatter",
			"remark-gfm",
			"@stefanprobst/remark-preset",
			[
				"remark-lint-no-dead-urls",
				{
					"skipLocalhost": true
				}
			]
		],
		"ignorePatterns": [
			"README.md"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "yarn lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
