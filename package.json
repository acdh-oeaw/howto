{
  "name": "@acdh-oeaw/howto",
  "private": true,
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "18.x",
    "yarn": "1.x"
  },
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "analyze": "cross-env ANALYZE='true' yarn run build",
    "build": "next build",
    "cms:dev": "cross-env PORT=8081 netlify-cms-proxy-server",
    "cms:styles": "cross-env NODE_ENV='production' NODE_OPTIONS='-r tsconfig-paths/register' postcss --config src/cms/previews/postcss.config.cjs node_modules/tailwindcss/tailwind.css src/styles/index.css -d public/assets/css && prettier public/assets/css --write",
    "cms:styles-win": "cross-env NODE_ENV='production' .\\node_modules\\.bin\\ts-node -r tsconfig-paths/register .\\node_modules\\postcss-cli\\bin\\postcss --config src/cms/previews/postcss.config.cjs node_modules/tailwindcss/tailwind.css src/styles/index.css -d public/assets/css && .\\node_modules\\.bin\\prettier public/assets/css --write",
    "create:favicons": "tsx ./scripts/createFavicons.ts",
    "create:feed": "tsx ./scripts/createFeed.ts",
    "create:metadata-dump": "tsx ./scripts/dumpMetadata.ts",
    "create:redirects": "tsx ./scripts/createRedirects.ts",
    "create:search-index": "dotenv -- tsx ./scripts/createSearchIndex.ts",
    "create:sitemap": "tsx ./scripts/createSitemap.ts",
    "debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "dev": "cross-env NEXT_PUBLIC_LOCAL_CMS_URL='http://localhost:8081/api/v1/' NEXT_PUBLIC_BASE_URL='http://localhost:3000' next dev --port=3000",
    "format": "prettier . --cache --check --ignore-path .gitignore",
    "format:fix": "yarn run format --write",
    "lint:check": "run-p lint:*:check",
    "lint:fix": "run-p lint:*:fix",
    "lint:code:check": "eslint . --cache --ignore-path .gitignore",
    "lint:code:fix": "yarn run lint:code:check --fix",
    "lint:md:check": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:md:fix": "yarn run lint:md:check --output",
    "lint:mdx:check": "remark . --quiet --frail --use mdx --ignore-path .gitignore",
    "lint:mdx:fix": "yarn run lint:mdx:check --output",
    "lint:styles:check": "stylelint \"./**/*.css\" --cache --ignore-path .gitignore",
    "lint:styles:fix": "yarn run lint:styles:check --fix",
    "postbuild": "run-s create:feed create:sitemap create:redirects create:search-index create:metadata-dump",
    "prebuild": "run-s create:favicons cms:styles",
    "prepare": "run-s setup",
    "setup": "simple-git-hooks || exit 0",
    "start": "next start",
    "test": "exit 0",
    "types:check": "tsc --noEmit",
    "validate": "run-s format:check lint:check types:check test"
  },
  "dependencies": {
    "@codemirror/lang-xml": "^6.0.2",
    "@codemirror/view": "^6.9.2",
    "@mdx-js/mdx": "^2.3.0",
    "@next/mdx": "^13.2.4",
    "@react-aria/button": "^3.7.0",
    "@react-aria/dialog": "^3.5.0",
    "@react-aria/focus": "^3.11.0",
    "@react-aria/i18n": "^3.7.0",
    "@react-aria/overlays": "^3.13.0",
    "@react-aria/progress": "^3.4.0",
    "@react-aria/searchfield": "^3.5.0",
    "@react-aria/ssr": "^3.5.0",
    "@react-aria/utils": "^3.15.0",
    "@react-stately/overlays": "^3.5.0",
    "@react-stately/searchfield": "^3.4.0",
    "@stefanprobst/is-absolute-url": "^1.0.2",
    "@stefanprobst/next-error-boundary": "^3.0.2",
    "@stefanprobst/next-page-metadata": "^2.0.5",
    "@stefanprobst/next-svg": "^4.2.1",
    "@stefanprobst/rehype-extract-toc": "^2.2.0",
    "@stefanprobst/rehype-shiki": "^2.2.0",
    "@stefanprobst/remark-resource-links": "^1.0.2",
    "algoliasearch": "^4.15.0",
    "codemirror": "^6.0.1",
    "hastscript": "^7.2.0",
    "image-size": "^1.0.2",
    "mdast-util-to-string": "^3.1.1",
    "netlify-cms-app": "^2.15.72",
    "next": "^13.2.4",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "remark": "^14.0.2",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-mdx": "^2.3.0",
    "remark-mdx-frontmatter": "^2.1.1",
    "remark-slug": "^7.0.1",
    "retext": "^8.1.0",
    "retext-smartypants": "^5.2.0",
    "rosetta": "^1.1.0",
    "sharp": "^0.31.3",
    "shiki": "^0.14.1",
    "strip-indent": "^4.0.0",
    "strip-markdown": "^5.0.0",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.2",
    "vfile": "^5.3.7",
    "vfile-matter": "^4.0.1",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@mdx-js/loader": "^2.3.0",
    "@next/bundle-analyzer": "^13.2.4",
    "@next/eslint-plugin-next": "^13.2.4",
    "@stefanprobst/commitlint-config": "^1.0.3",
    "@stefanprobst/eslint-config": "^1.0.10",
    "@stefanprobst/eslint-config-next": "^7.0.6",
    "@stefanprobst/eslint-config-react": "^1.0.4",
    "@stefanprobst/favicons": "^2.2.2",
    "@stefanprobst/next-feed": "^1.0.0",
    "@stefanprobst/next-sitemap": "^1.0.6",
    "@stefanprobst/prettier-config": "^2.0.3",
    "@stefanprobst/remark-preset": "^2.0.1",
    "@stefanprobst/stylelint-config": "^3.0.1",
    "@stefanprobst/tsconfig": "^2.2.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/hast": "^2.3.4",
    "@types/mdast": "^3.0.10",
    "@types/node": "^18.15.3",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.28",
    "@types/sharp": "^0.31.1",
    "@types/unist": "^2.0.6",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.36.0",
    "eslint-config-next": "^13.2.4",
    "eslint-plugin-tailwindcss": "^3.10.1",
    "file-loader": "^6.2.0",
    "lint-staged": "^13.2.0",
    "netlify-cms-proxy-server": "^1.3.24",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^11.2.1",
    "prettier": "^2.8.4",
    "remark-cli": "^11.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.2.0",
    "tailwindcss": "^3.2.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "tsx": "^3.12.5",
    "typescript": "^4.9.5",
    "url-loader": "^4.1.1",
    "xast-util-feed": "^1.2.2",
    "xast-util-to-xml": "^3.0.2",
    "yarn": "^1.22.19"
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">=0.75%",
      "not dead",
      "not op_mini all"
    ]
  },
  "commitlint": {
    "extends": "@stefanprobst/commitlint-config"
  },
  "eslintConfig": {
    "extends": [
      "@stefanprobst/eslint-config",
      "@stefanprobst/eslint-config-react",
      "@stefanprobst/eslint-config-next",
      "plugin:eslint-plugin-tailwindcss/recommended"
    ],
    "settings": {
      "tailwindcss": {
        "config": "./tailwind.config.cjs"
      }
    }
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ],
    "*.@(css)": [
      "stylelint --cache --fix",
      "prettier --cache --write"
    ],
    "*.@(json|yml)": "prettier --cache --ignore-unknown --write"
  },
  "postcss": {
    "plugins": {
      "tailwindcss/nesting": "postcss-nesting",
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": "@stefanprobst/prettier-config",
  "remarkConfig": {
    "plugins": [
      "remark-frontmatter",
      "remark-gfm",
      "@stefanprobst/remark-preset",
      [
        "remark-lint-no-dead-urls",
        {
          "skipLocalhost": true
        }
      ]
    ],
    "ignorePatterns": [
      "README.md"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "yarn commitlint --edit",
    "pre-commit": "yarn lint-staged"
  },
  "stylelint": {
    "extends": "@stefanprobst/stylelint-config"
  },
  "volta": {
    "node": "18.15.0"
  }
}
