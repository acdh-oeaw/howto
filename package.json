{
  "name": "acdh-ch-howto",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "analyze": "cross-env ANALYZE='true' yarn run build",
    "build": "next build",
    "cms:dev": "netlify-cms-proxy-server",
    "cms:styles": "cross-env NODE_ENV='production' NODE_OPTIONS='-r tsconfig-paths/register --inspect-brk' postcss --config src/cms/previews/postcss.config.js node_modules/tailwindcss/tailwind.css src/styles/index.css -d public/assets/css && prettier public/assets/css --write",
    "create:favicons": "ts-node scripts/createFavicons",
    "create:feed": "ts-node scripts/createFeed",
    "create:sitemap": "ts-node scripts/createSitemap",
    "debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "dev": "next dev",
    "format": "prettier . -l --ignore-path .gitignore",
    "format:fix": "yarn run format --write",
    "lint": "next lint . --cache --ignore-path .gitignore",
    "lint:fix": "yarn run lint --fix",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:md:fix": "yarn run lint:md --output",
    "lint:mdx": "xdm . --quiet --frail --ignore-path .gitignore",
    "lint:mdx:fix": "yarn run lint:mdx --output",
    "postbuild": "yarn run create:sitemap",
    "postinstall": "patch-package",
    "prebuild": "yarn run create:favicons && yarn run cms:styles",
    "prepare": "simple-git-hooks || true",
    "start": "next start",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn run test --coverage",
    "test:watch": "yarn run test --watch",
    "typecheck": "tsc --noEmit",
    "validate": "yarn run format && yarn run lint && yarn run typecheck && yarn test"
  },
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  },
  "dependencies": {
    "@codemirror/basic-setup": "^0.18.2",
    "@codemirror/lang-xml": "^0.18.0",
    "@react-aria/i18n": "^3.3.1",
    "@react-aria/overlays": "^3.6.3",
    "@react-aria/progress": "^3.1.2",
    "@react-aria/ssr": "^3.0.2",
    "@stefanprobst/next-error-boundary": "^1.0.8",
    "@stefanprobst/next-page-metadata": "^1.0.10",
    "@stefanprobst/next-svg": "^2.0.0",
    "@stefanprobst/rehype-extract-toc": "^1.0.3",
    "@stefanprobst/rehype-shiki": "^1.0.0",
    "hastscript": "^6.0.0",
    "js-yaml": "^4.1.0",
    "netlify-cms-app": "^2.15.19",
    "next": "^11.0.1",
    "next-transpile-modules": "^7.3.0",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rehype-autolink-headings": "^5.1.0",
    "rehype-slug": "^4.0.1",
    "remark-footnotes": "^3.0.0",
    "remark-frontmatter": "^3.0.0",
    "remark-gfm": "^1.0.0",
    "remark-mdx-frontmatter": "^1.0.1",
    "rosetta": "^1.1.0",
    "shiki": "^0.9.4",
    "strip-indent": "^4.0.0",
    "terser": "^5.7.0",
    "unified": "^9.2.1",
    "unist-util-visit": "^2.0.3",
    "vfile": "^4.2.1",
    "vfile-matter": "^2.2.0",
    "xdm": "^1.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@next/bundle-analyzer": "^11.0.1",
    "@stefanprobst/commitlint-config": "^1.0.1",
    "@stefanprobst/favicons": "^1.0.7",
    "@stefanprobst/next-sitemap": "^1.0.6",
    "@stefanprobst/prettier-config": "^1.0.3",
    "@stefanprobst/remark-preset": "^1.0.1",
    "@stefanprobst/tsconfig": "^1.1.0",
    "@stefanprobst/xdm-cli": "^1.0.2",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/typography": "^0.4.1",
    "@types/hast": "^2.3.1",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^15.12.2",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.10",
    "@types/unist": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "autoprefixer": "^10.2.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "eslint-config-next": "^11.0.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "netlify-cms-proxy-server": "^1.3.18",
    "patch-package": "^6.4.7",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^8.0.1",
    "prettier": "^2.3.1",
    "remark-cli": "^9.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "simple-git-hooks": "^2.4.1",
    "tailwindcss": "^2.2.0",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2",
    "xast-util-feed": "^1.2.0",
    "xast-util-to-xml": "^3.0.0"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "commitlint": {
    "extends": "@stefanprobst/commitlint-config"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "next",
      "next/core-web-vitals"
    ],
    "settings": {},
    "rules": {
      "@next/next/no-img-element": "off",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "import/no-named-as-default": "off",
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "aspects": [
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "jsx-a11y/no-autofocus": [
        "warn",
        {
          "ignoreNonDOM": true
        }
      ],
      "jsx-a11y/no-onchange": "off"
    },
    "overrides": [
      {
        "files": [
          "*.config.js"
        ],
        "env": {
          "node": true
        }
      },
      {
        "files": [
          "**/*.@(ts|tsx)"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:import/typescript"
        ],
        "parserOptions": {
          "project": [
            "./tsconfig.json"
          ]
        },
        "settings": {
          "import/resolver": {
            "typescript": {
              "alwaysTryTypes": true
            }
          }
        },
        "rules": {
          "@typescript-eslint/array-type": [
            "error",
            {
              "default": "generic"
            }
          ],
          "@typescript-eslint/consistent-type-imports": "error",
          "@typescript-eslint/no-unnecessary-condition": "warn",
          "@typescript-eslint/no-unused-vars": [
            "error",
            {
              "argsIgnorePattern": "^_",
              "varsIgnorePattern": "^_"
            }
          ],
          "@typescript-eslint/strict-boolean-expressions": "error",
          "@typescript-eslint/switch-exhaustiveness-check": "error"
        }
      }
    ]
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.@(css|json|yml)": "prettier --write",
    "*.md": [
      "remark --quiet",
      "prettier --write"
    ],
    "*.mdx": [
      "xdm --quiet",
      "prettier --write"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "postcss-nesting": {},
      "autoprefixer": {}
    }
  },
  "prettier": "@stefanprobst/prettier-config",
  "remarkConfig": {
    "plugins": [
      "remark-frontmatter",
      "remark-gfm",
      "remark-footnotes",
      "@stefanprobst/remark-preset",
      "remark-lint-no-dead-urls"
    ],
    "ignorePatterns": [
      "README.md"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "yarn commitlint --edit",
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn run validate"
  }
}
